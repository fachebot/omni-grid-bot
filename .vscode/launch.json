{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}"
        },
        {
            "name": "Launch Local Test",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/test"
        }
    ],
    "gopls": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "deepCompletion": true,
        "build.directoryFilters": [
            "-./.git"
        ],
        "ui.completion.experimentalPostfixCompletions": false,
        "formatting.gofumpt": true
    },
    "go.formatTool": "gofumpt",
    "go.useLanguageServer": true,
    "go.languageServer": "gopls"
}